{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings/*"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true
  }
}